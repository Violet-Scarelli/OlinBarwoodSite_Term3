@model Message
@{
    ViewData["Title"] = "Forum";
}
<div class="text-center jumbotron jumbotron-fluid bg-info">
    <h1>Welcome to our contact page!</h1>
</div>
<div class="text-center">
    @if (@Model != null)
    {
        <p>
            <h2>Latest Message:</h2>
            <span class"bg-info p-1 rounded-sm">Message ID: @Model.MessageID<br /></span>
            <span class"bg-info p-1 rounded-sm">Sender: @Model.Sender<br /></span>
            <span class"bg-info p-1 rounded-sm">Recipient: @Model.Recipient <br /></span>
            <span class"bg-info p-1 rounded-sm">Title: @Model.Subject<br /></span>
            <span class"bg-info p-1 rounded-sm">Message: @Model.MsgBody<br /></span>
            <span class"bg-info p-1 rounded-sm">Date Sent: @Model.SendDate.ToShortDateString()</span>
        </p>
    }
    <a asp-controller="Contact" asp-action="Contact">Click here to send us a message!</a><br />
</div>
